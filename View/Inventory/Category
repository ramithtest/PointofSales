    }                                        

    private void search_value_varKeyPressed(java.awt.event.KeyEvent evt) {                                            
        // TODO add your handling code here:
        String x = search_value_var.getText();
        if(evt.getKeyCode()==KeyEvent.VK_ENTER){
            String q = "SELECT * FROM item_category WHERE category_name ='"+x+"'";
            try {
                pstatement = conn.prepareStatement(q);
                rset = pstatement.executeQuery();
                jTable1.setModel(DbUtils.resultSetToTableModel(rset));
                
                
                
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e.getMessage(),"ERROR",2);
            }  
        
        
        }  
    }                                           
