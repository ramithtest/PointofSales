    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // TODO add your handling code here:
            
            String temp1 = name_var.getText();
            String temp2 = description_var.getText();
            
            
            if(temp1 !=null && !temp1.isEmpty()){
            Insert_Category_Items Insert_Category_Items_obj = new Insert_Category_Items(temp1,temp2);
            Insert_Category Insert_Category_obj = new Insert_Category(Insert_Category_Items_obj.getCategory_name(),Insert_Category_Items_obj.getCategory_description());
            
            Insert_Category_obj.execute_Insert_Measuring_Unit_Db();
            load_tabel(); 
            
            }
            else{
                JOptionPane.showMessageDialog(null, "Invalid Cateogry Name !!", 
                "Error", JOptionPane.CLOSED_OPTION);
            }
        } catch (SQLException ex) {
            Logger.getLogger(Item_Category.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
        
        
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        name_var.setText(null);
        description_var.setText(null);
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         




