    private void save_btnActionPerformed(java.awt.event.ActionEvent evt) {                                         

        try {
            String temp4 = location_code_var.getText();
            String temp5 = location_name_var.getText();
            String temp6 = location_desc_var.getText();
            
            if(temp4 !=null && temp5 !=null && temp6 !=null){
              Insert_Stock_Location Insert_Stock_Location_obj = new Insert_Stock_Location(temp4,temp5,temp6);
              Insert_Stock_Location_Db Insert_Stock_Location_Db_obj = new Insert_Stock_Location_Db(Insert_Stock_Location_obj.getStock_code(),Insert_Stock_Location_obj.getStock_name(),Insert_Stock_Location_obj.getStock_desc());
              
              Insert_Stock_Location_Db_obj.execute_insert_stock_location_db();
              load_tabel();
                
                
            }else{
                
            }
        } catch (Exception e) {
             JOptionPane.showMessageDialog(null, "Invalid Measuring Unit Code Value !!", 
            "Error", JOptionPane.CLOSED_OPTION);
        }
        
        
        
        
        
        


        // TODO add your handling code here:
    }                                        

