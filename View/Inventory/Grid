    private void add_btnActionPerformed(java.awt.event.ActionEvent evt) {                                        
        try {
            
            SimpleDateFormat oDateFormat = new SimpleDateFormat("dd-MM-yyyy");

            String temp1 = batch_no.getText();
            //Date temp2 = manu_date_chooser.getDate();
            Date manu_date = (Date)manu_date_chooser.getDate();

            String temp2 = oDateFormat.format(manu_date);

            //Date temp3 = exp_date_chooser.getDate();

            Date exp_date = (Date)exp_date_chooser.getDate();

            String temp3 = oDateFormat.format(exp_date);

            float temp4 = Float.parseFloat(qty_var.getText());
            float temp5 = Float.parseFloat(cost_var.getText());
            float temp6 = Float.parseFloat(sell_price_var.getText());
            //float temp7 = Float.parseFloat(total_var.getText());
            float temp8 = Float.parseFloat(discount_var.getText());
            String temp9 = notes_var.getText();

            Date add_date = (Date)add_date_chooser.getDate();

            String temp10 = oDateFormat.format(add_date);

            //Date temp10 = add_date_chooser.getDate();
            String temp11 = ref_var.getText();
            
            Inventory_batch Inventory_batch_obj = new Inventory_batch(temp1,temp2,temp3,temp4,temp5,temp6,temp8,temp9,temp10,temp11);
            totalcost_calculation totalcost_calculation_obj = new totalcost_calculation(Inventory_batch_obj.getSelling_price(), Inventory_batch_obj.getQuantity(),Inventory_batch_obj.getDiscount());
            
            
            float hello = totalcost_calculation_obj.calculate();
            
            String tes = String.valueOf(hello);
            
            total_var.setText(tes);
            
            Inventory_Batch_Db Inventory_Batch_Db_obj = new Inventory_Batch_Db(Inventory_batch_obj.getBatch_code(),Inventory_batch_obj.getManufacture_date(),Inventory_batch_obj.getExpire_date(),Inventory_batch_obj.getQuantity(),Inventory_batch_obj.getCost(),Inventory_batch_obj.getSelling_price(),totalcost_calculation_obj.calculate(),Inventory_batch_obj.getDiscount(),Inventory_batch_obj.getNotes(),Inventory_batch_obj.getAdd_date(),Inventory_batch_obj.getReference_code());
           
            Inventory_Batch_Db_obj.execute_inventory_batch();
            load_tabel();

            // TODO add your handling code here:
        } catch (SQLException ex) {
            Logger.getLogger(I_Grid.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                       


