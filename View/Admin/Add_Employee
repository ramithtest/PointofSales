  public void load_table(){
    try {
        String sql = "SELECT * FROM member_details"; //or can use myname,myfood
        pstatement = conn.prepareStatement(sql);
        rset = pstatement.executeQuery();
        jTable1.setModel(DbUtils.resultSetToTableModel(rset));
    } catch (SQLException ex) {
        Logger.getLogger(Add_Employee.class.getName()).log(Level.SEVERE, null, ex);
    }
  }  
private void fill_combo(){

try{

String q = "SELECT * FROM department_table";
pstatement = conn.prepareStatement(q);
rset = pstatement.executeQuery();


while(rset.next()){

String name = rset.getString("dep_name");
//String desc = rset.getString("category_description");
department_combo.addItem(name);

//category_var.addItem(desc);

}

}catch(Exception e){
JOptionPane.showMessageDialog(null, e); 
}
}
    
    
    
    
    
