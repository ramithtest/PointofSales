    private void add_btnActionPerformed(java.awt.event.ActionEvent evt) {                                        

    try {
        SimpleDateFormat oDateFormat = new SimpleDateFormat("dd-MM-yyyy");
        
        String temp1 = f_name_var.getText();
        String temp2 = last_name_var.getText();
        String temp3 = nic_var.getText();
        String temp4 = add1_var.getText();
        String temp5 = add2_var.getText();
        String temp6 = add3_var.getText();
        int temp7 = Integer.parseInt(tel_var.getText());
        Date date_start = (Date)jDateChooser1.getDate();
        String temp8 = oDateFormat.format(date_start);
        String temp9 = (String) department_combo.getSelectedItem();
        
        
        add_member_model add_member_model_obj = new add_member_model(temp1,temp2,temp3,temp4,temp5,temp6,temp7,temp8,temp9);
        // TODO add your handling code here:
        String [] check_null = new String[]{temp1,temp2,temp3,temp4,temp5,temp6,temp8,temp9};
        
        for(int i=0;i<7;i++){
            
            
            if((check_null[i]==null)){
                
                System.out.println("HIIIII");
                
            }else{
                System.out.println("FAILLL");
                
            }
            
        }
        
        
        
        
        
        String a = add_member_model_obj.getEmp_add1();
        String b = add_member_model_obj.getEmp_add3();
     
        
        add_member add_member_obj = new add_member(add_member_model_obj.getEmp_f_name(),add_member_model_obj.getEmp_l_name(),add_member_model_obj.getEmp_nic_no(),add_member_model_obj.getEmp_add1(),add_member_model_obj.getEmp_add2(),add_member_model_obj.getEmp_add3(),add_member_model_obj.getEmp_tele(),add_member_model_obj.getEmp_start_date(),add_member_model_obj.getEmp_department_no());        
    
       add_member_obj.execute_add_member();
       Add_Employee Add_Employee_obj = new Add_Employee();
       Add_Employee_obj.load_table();


    
    } catch (SQLException ex) {
        Logger.getLogger(Add_Employee.class.getName()).log(Level.SEVERE, null, ex);
    }
        
        
        
        
        
    }                                       

