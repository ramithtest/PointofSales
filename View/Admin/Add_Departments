    private void add_btnActionPerformed(java.awt.event.ActionEvent evt) {                                        

     try {
         String temp1 = dep_name_var.getText();
         String temp2 = dep_desc_var.getText();
         
         Department_add Department_add_obj = new Department_add(temp1,temp2);
         Add_departments Add_departments_obj = new Add_departments(Department_add_obj.getDep_name(),Department_add_obj.getDep_desc());
         
         Add_departments_obj.execute_add_department();
         load_tabel();
         
         
         // TODO add your handling code here:
     } catch (SQLException ex) {
         Logger.getLogger(Add_Departments.class.getName()).log(Level.SEVERE, null, ex);
     }
        
        
        
        
        
        
        
    }                                       


