    private void add_departmentMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // TODO add your handling code here:
        try {
            main_desktop_pane.removeAll();
            Add_Departments Add_Departments_obj = new Add_Departments();
            main_desktop_pane.add(Add_Departments_obj).setVisible(true);
        } catch (Exception e) {
        }
    }                                           

    private void add_memberMouseClicked(java.awt.event.MouseEvent evt) {                                        
        
        try {
           
            main_desktop_pane.removeAll();
            Add_Employee Add_Employee_obj = new Add_Employee();
            main_desktop_pane.add(Add_Employee_obj).setVisible(true);
        } catch (Exception e) {
            System.out.println(e); 
        }
        
        
    }                                       

    private void add_userMouseClicked(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
        
        try {
           
            main_desktop_pane.removeAll();
            Add_Users Add_Users_obj = new Add_Users();
            main_desktop_pane.add(Add_Users_obj).setVisible(true);
        } catch (Exception e) {
            
        }
    }                                     

